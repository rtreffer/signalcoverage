            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="de.locked.cellmapper.MyPreferenceActivity"/>

        <service android:name="de.locked.cellmapper.DbLoggerService"/>
    </application>

</manifest>
